@page
@model Maelstrom.Admin.Pages.SiteManager.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Site</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Site.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Site.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Site.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Site.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Site.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Site.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Site.SiteType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Site.SiteType.Name)
        </dd>
    </dl>

    <div class="card-img">
        @{
            if (Model.SiteImage != null)
            {
                <img src=@Model.SiteImage id="img-aquarium" />

            }
            else
            {
                <img src="~/media/UserImages/default.jpg" id="img-aquarium" />
            }
        }
    </div>
    
    <form method="post">
        <input type="hidden" asp-for="Site.SiteID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
