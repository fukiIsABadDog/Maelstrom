@page
@model Maelstrom.Areas.User.Pages.ResultManager.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<div class="container">

<div class="row" style=" background-color:floralwhite">

    <div class="col-12 mt-5">

    
        <div class="shadow-lg mt-5 mb-3 text-center fw-bolder">
            <h1>Create</h1>
            <hr>
            <hr>
            <div class="mt-4 mb-4">
                <a asp-page="/SiteManager/Index" class=" btn btn-lg btn-primary w-50 mb-4" style="height:3rem">Back to Site Manager</a>
            </div>
        </div>
        <div class="col-12 shadow mt-3 text-center fw-bolder">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SiteUserID" />
                <input type="hidden" asp-for="SiteID" />
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="TestResult.Temperature" class="control-label"></label>
                        <input asp-for="TestResult.Temperature" class="form-control" />
                        <span asp-validation-for="TestResult.Temperature" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TestResult.Ph" class="control-label"></label>
                        <input asp-for="TestResult.Ph" class="form-control" />
                        <span asp-validation-for="TestResult.Ph" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TestResult.Sality" class="control-label"></label>
                        <input asp-for="TestResult.Sality" class="form-control" />
                        <span asp-validation-for="TestResult.Sality" class="text-danger"></span>
                    </div>
                    <label asp-for="TestResult.Ammonia" class="control-label"></label>
                    <input asp-for="TestResult.Ammonia" class="form-control" />
                    <span asp-validation-for="TestResult.Ammonia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TestResult.Nitrite" class="control-label"></label>
                    <input asp-for="TestResult.Nitrite" class="form-control" />
                    <span asp-validation-for="TestResult.Nitrite" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TestResult.Nitrate" class="control-label"></label>
                    <input asp-for="TestResult.Nitrite" class="form-control" />
                    <span asp-validation-for="TestResult.Nitrate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TestResult.Calcium" class="control-label"></label>
                    <input asp-for="TestResult.Calcium" class="form-control" />
                    <span asp-validation-for="TestResult.Calcium" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TestResult.Alkalinty" class="control-label"></label>
                    <input asp-for="TestResult.Alkalinty" class="form-control" />
                    <span asp-validation-for="TestResult.Alkalinty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TestResult.Magnesium" class="control-label"></label>
                    <input asp-for="TestResult.Magnesium" class="form-control" />
                    <span asp-validation-for="TestResult.Magnesium" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TestResult.Phosphate" class="control-label"></label>
                    <input asp-for="TestResult.Phosphate" class="form-control" />
                    <span asp-validation-for="TestResult.Phosphate" class="text-danger"></span>
                </div>




                <div class="form-group mt-5 mb-3 text-center">
                    <input type="submit" value="Submit" class="btn btn-lg btn-success w-25 mb-4" style="height:3rem" />
                </div>
            </form>
        </div>
    

</div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}