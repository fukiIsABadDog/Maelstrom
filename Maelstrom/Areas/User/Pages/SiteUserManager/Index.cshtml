@page
@model Maelstrom.Areas.User.Pages.SiteUserManager.IndexModel
@{
        ViewData["Title"] = "All Users";
        Layout = "_Layout";
}
<div class="container shadow" style=" background-color:floralwhite">
        <div class="container shadow pb-3 ps-5 pe-5">
                <div class="row  mt-3">
                        <div class="col-12 text-center">
                                <div class="mt-3 shadow">
                                <h1 >Index</h1>
                                </div>
                        </div>
                </div>
                <div class="row">
                        <div class="col text-center"> <a asp-page="./Create" asp-route-id="@Model.SiteID.ToString()"
                                        class="btn  btn-success mt-4">Add New User</a>
                        </div>
                </div>
        </div>
        <p> @Model.Message </p>
        <div class="row">
                <div class="col-12 mb-5">
                @{int i=0;}
                @foreach (var item in Model.SiteUsers)
                {
                        i++;
                         <div class="accordion"  id="accordionExample">
                                <div class="accordion-item">
                                        <h2 class="accordion-header" id="heading_@i">
                                                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                                        data-bs-target="#collapse_@i" aria-expanded="true"
                                                        aria-controls="collapse_@i">
                                                        @Html.DisplayFor(modelItem => item.AppUser.FirstName)
                                                        @Html.DisplayFor(modelItem => item.AppUser.LastName)
                                                </button>
                                        </h2>
                                        <div id="collapse_@i" class="accordion-collapse collapse"
                                                aria-labelledby="heading_@i" data-bs-parent="#accordionExample">
                                                <div class="accordion-body ">
                                                        <ol class="list-group list-group-numbered">
                                                                <li
                                                                        class="list-group-item d-flex justify-content-between align-items-start">
                                                                        <div class="ms-2 me-auto">
                                                                                <div class="fw-bold">Admin</div>
                                                                                 @Html.DisplayFor(modelItem => item.IsAdmin)
                                                                        </div>
                                                                </li>
                                                                    <li
                                                                        class="list-group-item d-flex justify-content-between align-items-start">
                                                                        <div class="ms-2 me-auto">
                                                                                <div class="fw-bold">Email</div>
                                                                                  @Html.DisplayFor(modelItem => item.AppUser.Email)
                                                                        </div>
                                                                </li>
                                                                 @if (item.IsAdmin != true)
                                                                 {
                                                                        <li
                                                                                class="list-group-item d-flex justify-content-between align-items-start">
                                                                                <div class="ms-2 me-auto">
                                                                                        <div class="fw-bold">Options</div>
                                                                                        <a class="btn btn-danger p-1" asp-page="./Edit"
                                                                                                asp-route-id="@item.SiteUserID">Add
                                                                                                As Admin</a>
                                                                                        <a class="btn btn-warning p-1" asp-page="./Delete"
                                                                                                asp-route-id="@item.SiteUserID">Remove User From Site</a>
                                                                                </div>
                                                                         </li>           
                                                                 }
                                                        </ol>
                                                </div>
                                        </div>
                                </div>
                        </div>
                }
                </div>
                        </div>
        </div>
</div>