@page
@model Maelstrom.Areas.User.Pages.SiteUserManager.EditModel
@{
    ViewData["Title"] = "Add As Administrator";
    Layout = "_Layout";
}

<div class="container" style=" background-color:floralwhite">
    <div class="row pb-4 ">
        <div class="col mt-5">
            <div class="shadow mb-3 text-center fw-bolder">
                 <h1>Modify Privileges for</h1>
              <h4>@Model.AssociatedAppUser.FirstName @Model.AssociatedAppUser.LastName</h4>
                <hr>
                <hr>
                <div class="mt-4 mb-4">
                    <a asp-page="./Index" asp-route-id="@Model.SiteId.ToString()" class=" btn btn-lg btn-primary w-50 mb-4" style="height:3rem">Back to User Manager</a>
                </div>
            </div>

            <div class="col-12 shadow pt-1 mt-3 text-center fw-bolder">
                <h3 class="mt-3 pt-1 text-danger shadow-lg m-3 pb-2">Grant Administrator Privileges<br> </h3>


                <hr />
                <div class="row">
                    <div class="col p-2">
                        <div class="row">
                            <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="SiteId" />
                            <input type="hidden" asp-for="SiteUserToBeEditedId" />
                            <div class="form-group ps-3 pe-3">
                                <h5 class="text-danger">This action is not reversible, are you sure you want to continue?</p>
                                    <p class="text-danger">@Model.Message</p>
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="IsAdmin" />
                                            @Html.DisplayNameFor(model =>
                                            model.IsAdmin)
                                        </label>
                                    </div>
                            </div>
                            <div class="form-group pt-2 pb-3">
                                <input type="submit" value="Modify" class="btn btn-danger" />
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}