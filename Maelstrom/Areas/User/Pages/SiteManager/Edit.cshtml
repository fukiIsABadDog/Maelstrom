@page
@model Maelstrom.Areas.User.Pages.SiteManager.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}
<div class="container-fluid mt-5" style=" background-color:floralwhite">
    <div class="row ">
        <div class="shadow-lg mt-2 mb-3 text-center fw-bolder">
            <h1>Edit</h1>
            <hr>
            <hr>
            <div class="mt-4 mb-4">
                <a asp-page="./Index" class=" btn btn-lg btn-primary w-50" style="height:3rem">Back to List</a>
            </div>
        </div>

        <div class="col-12 shadow mt-3 text-center fw-bolder">

<h2 class=" mt-3">@Model.Site.Name</h2>
<hr />
            <dl class="row shadow">
                <div class=" col-md-6 float-start mb-4">
                    @{
                        if (Model.SiteImage != null)
                        {
                            <img src=@Model.SiteImage  class="w-100 shadow" />

                        }
                        else
                        {
                            <img src="~/media/UserImages/default.jpg"  class="w-100 shadow" />
                        }
                    }
                </div>
                <div class="col-md-6">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Site.SiteID" />
            <input type="hidden" asp-for="Site.ImageData" />
            <div class="form-group">
                <label asp-for="Site.Name" class="control-label"></label>
                <input asp-for="Site.Name" class="form-control" />
                <span asp-validation-for="Site.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.Capacity" class="control-label"></label>
                <input asp-for="Site.Capacity" class="form-control" />
                <span asp-validation-for="Site.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.Location" class="control-label"></label>
                <input asp-for="Site.Location" class="form-control" />
                <span asp-validation-for="Site.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.SiteTypeID" class="control-label"></label>
                <select asp-for="Site.SiteTypeID" class="form-control" asp-items="ViewBag.SiteTypeID"></select>
                <span asp-validation-for="Site.SiteTypeID" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 shadow">
                <label asp-for="Upload" class="control-label"></label><br />
                <input asp-for="Upload" accept=".jpg" type="file" class="form-control form-control-lg" />
                <span asp-validation-for="Upload" class="text-danger"></span>
            </div>
            <div class="form-group">
            <input type="submit" value="Save" class="btn btn-warning w-50 mt-5 mb-3" style="height:3rem" />
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

