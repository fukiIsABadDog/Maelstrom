@page "{id:int}"
@model Maelstrom.Areas.User.Pages.SiteManager.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
}
@{
    Layout = "_Layout";
}
<div class="container-fluid mt-5" style=" background-color:floralwhite">
    <div class="row ">
        <div class="shadow-lg mt-2 mb-3 text-center fw-bolder">
           <h1>Delete</h1>
            <hr>
            <hr>
            <div class="mt-4 mb-4">
                <a asp-page="./Index" class=" btn btn-lg btn-primary w-50" style="height:3rem">Back to Site Manager</a>
            </div>
        </div>

        <div class="col-12 shadow mt-3 text-center fw-bolder">
<h3 class="mt-3 text-danger">Are you sure you want to delete this?</h3>

    <h2>@Model.Site.Name</h2>
   
    <hr />
    <dl class="row shadow">
                    <div class=" col-md-6 float-start mb-4">
                        @{
                            if (Model.SiteImage != null)
                            {
                                <img src=@Model.SiteImage class="w-100 shadow" />

                            }
                            else
                            {
                                <img src="~/media/UserImages/default.jpg" class="w-100 shadow" />
                            }
                        }
                    </div>
               <div class="col-md-6">
          <div class="row"> 
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Site.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Site.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Site.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Site.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Site.SiteType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Site.SiteType.Name)
        </dd>
      
            <form method="post">
                @*<input type="hidden" asp-for="Site.SiteID" />*@
                <input type="submit" value="Delete" class="btn btn-danger w-50 mt-5 mb-3" style="height:3rem"/> 
            </form>
            </dl>
        </div>
    </div>
</div>
