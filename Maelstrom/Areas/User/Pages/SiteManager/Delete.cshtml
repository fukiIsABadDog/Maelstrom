@page "{id:int}"
@model Maelstrom.Areas.User.Pages.SiteManager.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Site";
    Layout = "_Layout";
}
<div class="row ">
    <div class=" col-xxl-3 col-xl-2 col-lg-1"></div>
    <div class="col col-xxl-6 col-xl-8 col-lg-10" style=" background-color:floralwhite">
        <div class="row mb-3 text-center fw-bolder">
            <hr>
            <h1>Delete</h1>
            <hr>
            <div class="col-md-3 col-lg-4"></div>
            <div class="col-md-6 col-lg-4">
                <a asp-page="./Index" class=" btn btn-lg btn-primary w-50 mb-4">Back to Sites
                </a>
            </div>
            <div class="col-md-3 col-lg-4"></div>
            <hr>
            <hr>
        </div>
        <div class=" ms-5 me-5 fw-bolder">
            <h2 class="mt-1 pt-2 text-danger text-center fw-bold">Are you sure you want to delete this?</h2>
            <div class="row p-4">
                <div class="col shadow text-center fw-bolder">
                    <hr />
                    <h2>@Model.Site.Name</h2>
                    <hr />
                </div>
            </div>
            <div class="row ps-2 pe-2">
                <div class=" col-md-6 ">
                    @{
                        if (Model.SiteImage != null)
                        {
                            <img src=@Model.SiteImage class="w-100 shadow mt-3 mb-3 border p-2" />
                        }
                        else
                        {
                            <img src="~/media/UserImages/default.jpg" class="w-100 shadow mt-3 mb-3 border p-2" />
                        }
                    }
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col border shadow p-3 mb-4">
                            <dt class="col-sm-2 control-label mt-4 h5">
                                @Html.DisplayNameFor(model => model.Site.Capacity)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Site.Capacity)
                            </dd>
                            <dt class="col-sm-2 control-label mt-4 h5">
                                @Html.DisplayNameFor(model => model.Site.Location)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Site.Location)
                            </dd>
                            <form method="post" class="text-center">
                                @*<input type="hidden" asp-for="Site.SiteID" />*@
                                <input type="submit" value="Delete" class="btn btn-danger w-50 mt-5 mb-4"
                                    style="height:3rem" />
                            </form>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
