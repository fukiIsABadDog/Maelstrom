@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4 mt-5 me-5">
            <section>
                <form id="account" method="post">
                    <h2 class="text-center">Welcome Back</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-1">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username"
                            aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                            aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox mt-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Log
                            in</button>
                    </div>
                    <div class="mt-5 text-center">
                        <h5>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </h5>
                        <h5>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </h5>
                        <h5>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email
                                confirmation</a>
                        </h5>
                    </div>
                </form>
            </section>
        </div>
