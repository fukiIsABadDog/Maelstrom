@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="container">
<div class="row">
    <div class="col-md-4 mt-5 me-5">
        <section>
            <form id="account" method="post">
                <h2 class="text-center">Welcome Back</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-1">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox mt-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Log in</button>
                </div>
                <div class="mt-5 text-center">
                    <h5>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </h5>
                    <h5>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </h5>
                    <h5>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </h5>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2 mt-5">
        <section class="w-75 ms-1">
            <h3 >Demo: Try one of our default logins</h3>
            <hr/>

            <table class="table table-borderless table-hover">
               
                    
                
               <thead>
                  <tr>
                     <th>Username</th>
                     <th>Password</th>
                 </tr>
              
               </thead>
                <tr>
                    <td>
                       admin@gmail.com
                    </td>
                    <td>
                        Maelstrom!123
                    </td>
                </tr>
                <tr>
                    <td>
                        ansardi.justin@gmail.com
                    </td>
                    <td>
                        Maelstrom!123
                    </td>
                </tr>
                <tr>
                    <td>
                        cauble@gmail.com
                    </td>
                    <td>
                        Maelstrom!123
                    </td>
                </tr>
                <tr>
                    <td>
                        seaborne@gmail.com
                    </td>
                    <td>
                        Maelstrom!123
                    </td>
                </tr>
            </table>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                 
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
