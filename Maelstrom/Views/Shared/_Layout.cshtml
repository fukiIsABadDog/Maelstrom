@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Maelstrom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap_sandstone.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/ddc50d03f9.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Maelstrom.styles.css" asp-append-version="true" />
</head>

<body>

    <header class="navbar navbar-expand-lg position-fixed navbar-toggleable-sm bg-Primary border-bottom box-shadow w-100 mb-3"
            style="background-color:white;z-index:3;">
        <div class="container-fluid">
            @* <a class="navbar-brand" style="color:DodgerBlue;" asp-area="" asp-controller="Home"
            asp-action="Index">Maelstrom</a>*@
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"
               style="max-width:125px">
                <img src="/media/MaelLogo.png" style="max-width:125px" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse  justify-content-between">

                <ul class="navbar-nav flex-grow-1">
                    @*It might make since to make another _layout for admin*@
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/SiteManager/Index" asp-area="Admin">
                                Admin Site
                                Manager
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/ResultManager/Index" asp-area="Admin">
                                Admin Result
                                Manager
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin") == false && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item m-1">
                            <div class="d-lg-none">
                                <a class="nav-link text-dark" asp-page="/Dash" asp-area="User">DashBoard</a>
                            </div>
                        </li>
                        <li class="nav-item m-1">
                            <div class="d-lg-none">
                                <a class="nav-link text-dark" asp-page="/SiteManager/Index" asp-area="User">
                                    Site
                                    Manager
                                </a>
                            </div>
                        </li>
                        <li class="nav-item m-1">
                            <div class="d-lg-none">
                                <a class="nav-link text-dark" asp-page="/SiteManager/Create" asp-area="User">Create Site</a>
                            </div>
                        </li>
                        <li class="nav-item position-absolute top-0 end-0">
                            <!-- <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; open</span> -->
                            <div class="d-none d-lg-block ">
                                <button class="btn btn-lg btn-success m-2" onclick="openNav()">
                                    &#9776; User Nav
                                </button>
                            </div>

                        </li>
                    }
                </ul>

                @if (SignInManager.IsSignedIn(User) != true)
                {
                    <div class="d-none d-lg-block">
                        <partial name="_LoginPartial" />
                    </div>
                }

                <div class="d-lg-none">
                    <partial name="_LoginPartial" />
                </div>


            </div>

        </div>


    </header>

    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a asp-page="/Dash" asp-area="User">Dash</a>
        <a asp-page="/SiteManager/Index" asp-area="User">Site Manager</a>
        <a asp-page="/SiteManager/Create" asp-area="User">Create Site</a>

        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            Manage
            Account
        </a>

        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="/Home">
            <button class=" btn btn-danger w-100 ms-1 me-1" type="submit">Logout</button>
        </form>

    </div>

    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "150px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>